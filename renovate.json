{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":dependencyDashboard", ":semanticCommits", ":enableVulnerabilityAlerts", ":rebaseStalePrs"],
	"timezone": "America/New_York",
	"minimumReleaseAge": "10 days",
	"prCreation": "not-pending",
	"prConcurrentLimit": 3,
	"prHourlyLimit": 5,
	"rebaseWhen": "behind-base-branch",
	"commitMessagePrefix": "chore(deps):",
	"commitMessageAction": "update",
	"commitMessageExtra": "to {{newVersion}}",
	"commitMessageTopic": "{{depName}}",
	"prBodyTemplate": "{{{header}}}{{{table}}}{{{notes}}}{{{changelogs}}}{{{controls}}}{{{footer}}}",
	"prBodyColumns": ["Package", "Update", "New value", "References"],
	"prBodyDefinitions": {
		"Package": "{{{depNameLinked}}}",
		"Update": "{{{updateType}}}",
		"New value": "`{{{newVersion}}}`",
		"References": "{{{references}}}"
	},
	"prFooter": "---\n\nðŸ¤– This PR was generated by Renovate Bot",
	"automergeType": "pr",
	"automergeStrategy": "squash",
	"platformAutomerge": true,
	"ignoreTests": false,
	"configMigration": true,
	"rollbackPrs": true,
	"osvVulnerabilityAlerts": true,
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch"],
			"groupName": "all non-major dependencies",
			"groupSlug": "minor-patch",
			"schedule": ["every 2 weeks on monday"],
			"labels": ["dependencies", "automerge"],
			"automerge": true
		},
		{
			"matchUpdateTypes": ["major"],
			"groupName": "all major dependencies",
			"groupSlug": "major",
			"schedule": ["every 4 weeks on tuesday"],
			"automerge": false,
			"labels": ["dependencies", "major", "breaking-change"],
			"assignees": ["andrew-hesse"],
			"prPriority": 10,
			"minimumReleaseAge": "14 days"
		},
		{
			"matchDatasources": ["docker"],
			"pinDigests": true
		},
		{
			"matchManagers": ["github-actions"],
			"pinDigests": true
		},
		{
			"matchDepTypes": ["devDependencies"],
			"matchUpdateTypes": ["major"],
			"automerge": true,
			"labels": ["dependencies", "dev", "automerge"]
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"schedule": ["every 4 weeks on wednesday"],
		"commitMessageAction": "refresh",
		"automerge": true,
		"labels": ["dependencies", "lock-file"]
	},
	"vulnerabilityAlerts": {
		"enabled": true,
		"labels": ["security", "urgent"],
		"reviewers": ["andrew-hesse"],
		"minimumReleaseAge": "0 days",
		"schedule": ["at any time"],
		"prPriority": 100,
		"automerge": true,
		"recreateClosed": true
	},
	"postUpdateOptions": ["npmDedupe"],
	"rangeStrategy": "bump",
	"separateMajorMinor": true,
	"separateMinorPatch": false
}
